{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Natural Remedies Content Pack",
  "type": "array",
  "items": {
    "anyOf": [
      {
        "type": "object",
        "properties": {
          "id":    { "type": "string", "pattern": "^[a-z0-9-]+$" },
          "title": { "type": "string", "minLength": 1 },
          "contentEn": { "type": ["string", "null"] },
          "contentSw": { "type": ["string", "null"] }
        },
        "required": ["id", "title", "contentEn"],
        "additionalProperties": false
      },
      {
        "type": "object",
        "properties": {
          "id":    { "type": "string", "pattern": "^[a-z0-9-]+$" },
          "title": { "type": "string", "minLength": 1 },
          "content_en": { "type": ["string", "null"] },
          "content_sw": { "type": ["string", "null"] }
        },
        "required": ["id", "title", "content_en"],
        "additionalProperties": false
      }
    ]
  }
}
